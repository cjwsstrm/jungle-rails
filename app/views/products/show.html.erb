<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Overall Rating</dt>
          <dd><%= @product.reviews.all.average(:rating).to_f.round(2) %></dd>
        </dl>
      </div>
    </div>
      
      <div class="col-sm-12">
        <h3 class ="lead">Product Reviews</h3>
      </div>

    <% user = User.all %>
    <% if current_user %>
    <h4 class="text-muted">Review the product</h4>
    <div class="col-sm-4">
      <%= render(partial: 'products/form', locals: {product: @product, reviews: @review}) %>
    </div>
    <% end %>
      <div class="col-sm-6 col-sm-offset-2">
        <% @product.reviews.order('created_at DESC').each do |review| %>
        <dl class="dl-horizontal">
          <dt>Description</dt> 
          <dd><%= review.description %></dd>
          <dt>Rating</dt>           
          <dd><%= review.rating %></dd>
          <dt>Reviewed by</dt>
          <dd><% @reviewer = user[review.user_id - 1] %></dd>
          <dd><%= @reviewer.first_name %></dd>
          <% if current_user.id == review.user_id %>
          <dt><%= button_to "Delete", product_review_path(:product_id=>review.product_id, :id=>review.id), method: :delete, class: "btn btn-sm btn-danger" %></dt>
          <% end %>
        </dl>
        <% end %>
      </div>
  </article>

</section>